<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ros.controller" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Robot Application</name>
    <description>
        Robot App is an Application for ROS.
    </description>
    <author email="geosalexs@gmail.com" href="https://github.com/georgealexakis">
        George Alexakis
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="android">
        <icon src="www/img/favicon.png" density="ldpi" />
        <icon src="www/img/favicon.png" density="mdpi" />
        <icon src="www/img/favicon.png" density="hdpi" />
        <icon src="www/img/favicon.png" density="xhdpi" />
        <icon src="www/img/favicon.png" density="xxhdpi" />
        <icon src="www/img/favicon.png" density="xxxhdpi" />
        <splash src="www/img/favicon.png" density="land-ldpi" />
        <splash src="www/img/favicon.png" density="land-mdpi" />
        <splash src="www/img/favicon.png" density="land-hdpi" />
        <splash src="www/img/favicon.png" density="land-xhdpi" />
        <splash src="www/img/favicon.png" density="land-xxhdpi" />
        <splash src="www/img/favicon.png" density="land-xxxhdpi" />
        <splash src="www/img/favicon.png" density="port-ldpi" />
        <splash src="www/img/favicon.png" density="port-mdpi" />
        <splash src="www/img/favicon.png" density="port-hdpi" />
        <splash src="www/img/favicon.png" density="port-xhdpi" />
        <splash src="www/img/favicon.png" density="port-xxhdpi" />
        <splash src="www/img/favicon.png" density="port-xxxhdpi" />
    </platform>

    <preference name="Fullscreen" value="true" />
    <preference name="KeepRunning" value="true" />
    <preference name="Orientation" value="landscape" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
